<div class="watchlist-container container-fluid search-wrapper mt-3">
    {{#unless wishMovieArr}}
    <h2>Your Watchlist is Empty</h2>
    {{/unless}}

    {{#each wishMovieArr}}
    <div class="row watchlist_card d-flex">
        {{!-- <a href="../movie/{{this.movie_id}}"> --}}
            <div class="poster-container">
                <img class="img-fluid watchlist_poster" width="180px" height="auto"
                    src="https://image.tmdb.org/t/p/w300{{this.poster_path}}">
                {{!-- <button id={{this.api_id}} class="watchlist-liked-btn" data-movieid={{this.api_id}}>
                    <i class="fas fa-check fa-xs"></i></button>
                <button id={{this.api_id}} class="watchlist-add-btn hidden" data-movieid={{this.api_id}}>
                    <i class="fas fa-plus"></i></button> --}}
                <div class="row d-flex justify-content-center">
                    <button id={{this.api_id}} class="watchlist-del-btn " data-movieid={{this.api_id}}>
                        REMOVE</button>
                </div>
            </div>

            {{!--
        </a> --}}
        <div class="movie-info col-9">
            <p class="movie-link">

                <a href="../movie/{{this.api_id}}">
                    {{math @index "+" 1}}. {{this.title}} ({{slicedate this.release_date}})
                </a>
            </p>
            <p>
                {{this.vote_average}}
                <i class="fas fa-star"></i>
            </p>
            <p><b style="font-size: 15px">Genres:</b><br><br> {{genreconverter this.genres}}</p>
            <p><b style="font-size: 15px">Overview:</b><br><br> {{this.overview}}</p>
        </div>
    </div>
    {{/each}}


</div>