<div class="container-fluid ">
    <div class="d-flex justify-content-center">
        <div class="row profile-row1 ">
            <div class="col-md-3 profile-pic-col">
                <div class="row  profile-pic-container">
                    <img class=" img-fluid profile-pic" src="/{{profile}}">
                </div>
                <div class="row mt-4 d-flex justify-content-center">
                    {{#if user}}
                    <button type="button" class="btn btn-success edit-profile text-center">Edit Profile</button>
                    {{/if}}
                </div>
            </div>
            <div class="user-container col-md-8">
                <p class="h2">{{username}}</p>
                <p>My Favourite Genres: {{fav_genre}}</p>
                <p>My Favourite Movie: {{fav_movie}}</p>
                <p>Introduction: {{intro}}</p>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="row">
            <div class="col vertical-align-center">
                <img class=" img-fluid screenshot-pic" src="/{{screenshot1}}">
            </div>
            <div class="col screenshot-container">
                <div class="row">
                    <img class=" img-fluid screenshot-pic" src="/{{screenshot1}}">
                </div>
                <div class="row">
                    <img class=" img-fluid screenshot-pic" src="/{{screenshot2}}">
                </div>
            </div>
        </div>
    </div>
</div>