<div class="container-fluid ">
    {{#if user}}
    <button type="button" class="btn btn-success edit-profile">Edit Profile</button>
    {{/if}}
    <div class="row profile_row1">
        <div class="col-md-3 profile-pic-container">
            <img class=" img-fluid profile-pic" src="/profiles/{{profile}}">
        </div>
        <div class="user-container col-md-8">
            <p class="h2">{{username}}</p>
            <p>My Favourite Genres: {{fav_genre}}</p>
            <p>My Favourite Movie: {{fav_movie}}</p>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="screenshot-container">
            <div class="row">
                <img class=" img-fluid screenshot-pic" src="/screenshot/{{screenshot1}}">
            </div>
            <div class="row">
                <img class=" img-fluid screenshot-pic" src="/screenshot/{{screenshot2}}">
            </div>
            <p>Introduction: {{intro}}</p>
        </div>
    </div>
</div>