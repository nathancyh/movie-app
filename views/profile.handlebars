<div class="container-fluid ">
    <div class="d-flex justify-content-center">
        <div class="profile-pic-container">
            <img class=" img-fluid profile-pic" width="154" height="auto" src="/profiles/{{profile}}">
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="user-container">
            <p>My Favourite Genres: {{fav_genre}}</p>
            <p>My Favourite Movie: {{fav_movie}}</p>

        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="screenshot-container">
            <div class="row">
                <img class=" img-fluid screenshot-pic" src="/screenshot/{{screenshot1}}">
            </div>
            <div class="row">
                <img class=" img-fluid screenshot-pic" src="/screenshot/{{screenshot2}}">
            </div>
            <p>Introduction: {{intro}}</p>
        </div>
    </div>
</div>